@model LepardCab.Models.DTOs.RentDTO

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="row">
    <div class="col-md-6">
        <img src="~/images/^BEB5BBF7D1E545BE5FD61A40FFFA6FF472E2535E65683F9A32^pimgpsh_fullsize_distr.png" class="img-responsive">

    </div>
    <div class="col-md-6">
        <h1>Car Booking</h1>

        @using (Html.BeginForm("Create", "Rent"))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.RentTime,  new { @class = "control-label col-md-2 ", style = "color:yellow;font-size:15px" })
                    
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.RentTime, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter durrration in hours" } })
                        @Html.ValidationMessageFor(model => model.RentTime, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Contact,  new { @class = "control-label col-md-2", style = "color:yellow;font-size:15px" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Contact, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter contact number" } })
                        @Html.ValidationMessageFor(model => model.Contact, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Car,  new { @class = "control-label col-md-2", style = "color:yellow;font-size:15px"})
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Car, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter desired car name" } })
                        @Html.ValidationMessageFor(model => model.Car, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Book" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>





@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
