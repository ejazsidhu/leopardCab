@model LepardCab.Models.DTOs.UserDTO

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row">
    <div class="col-md-6 col-sm-6">
        <img src="~/images/^BEB5BBF7D1E545BE5FD61A40FFFA6FF472E2535E65683F9A32^pimgpsh_fullsize_distr.png" class="img-responsive">

    </div>
    <div class="col-md-6 col-sm-6">
        <h1 >Signup Customer</h1>
