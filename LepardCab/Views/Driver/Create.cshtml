@model LepardCab.Models.DTOs.DriverDTO

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/Layouts/_Admin_Layout.cshtml";
}



<div class="row">
    <div class="col-md-6 col-sm-6">
        <img src="~/images/^BEB5BBF7D1E545BE5FD61A40FFFA6FF472E2535E65683F9A32^pimgpsh_fullsize_distr.png" class="img-responsive">

    </div>
    <div class="col-md-6 col-sm-6">
        @if (TempData["error"] != null)
        {

            <div class="alert alert-warning">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <strong>Warning!</strong> @TempData["error"].ToString().
            </div>
        }

        @using (Html.BeginForm("Create","Driver"))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h1>Driver Signup</h1>
               
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-3" })
